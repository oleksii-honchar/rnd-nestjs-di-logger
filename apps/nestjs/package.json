{
  "name": "@rnd-nestjs-di-logger/nestjs",
  "version": "1.0.0",
  "description": "NestJS DI Logger",
  "license": "MIT",
  "author": "Oleksii Honchar <tuiteraz@gmail.com>",
  "type": "module",
  "bin": "dist/src/main.js",
  "scripts": {
    "build": "npm run clean:dist && npm run ts:build",
    "clean": "rm -rf dist && rm -rf node_modules",
    "clean:dist": "rm -rf dist",
    "code:check": "npm run lint:check && npm run prettier:check && npm run ts:check",
    "code:fix": "npm run lint:fix && npm run prettier:write",
    "dev": "nodemon | pino-pretty -c --singleLine",
    "dev:debug": "nodemon --config nodemon-debug.json | pino-pretty -c --singleLine",
    "dev:debug:brk": "nodemon --config nodemon-debug.json --inspect-brk | pino-pretty -c --singleLine",
    "lint:check": "ESLINT_USE_FLAT_CONFIG=true eslint --config ./eslint.config.js --cache . --max-warnings 0",
    "lint:fix": "npm run lint:check --fix",
    "prettier:check": "prettier --check \"{src,test}/**/*.{ts,js,json,md}\"",
    "prettier:write": "prettier --write \"{src,test}/**/*.{ts,js,json,md}\"",
    "sort-package-json": "npx sort-package-json",
    "start": "npm run build; node dist/src/main.js",
    "ts-node": "tsx src/main.ts",
    "ts-node:debug": "tsx --inspect src/main.ts",
    "ts:build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "ts:check": "npm run ts:compile",
    "ts:compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "config": "^4.1.1",
    "express": "^5.2.1",
    "nestjs-pino": "^4.5.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1",
    "zod": "^4.1.13",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@eslint/markdown": "^7.5.1",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@tsconfig/node22": "^22.0.0",
    "@tsconfig/recommended": "^1.0.13",
    "@types/config": "^3.3.5",
    "@types/eslint__js": "^9.14.0",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "engines": {
    "node": "^22"
  }
}