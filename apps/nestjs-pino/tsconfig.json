{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "outDir": "./dist",
    "types": ["node", "jest"],
    "isolatedModules": true,
    "paths": {
      "@src/*": ["src/*"],
      "package.json": ["./package.json"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./dist", "./docs", "./coverage", "./ops", "./scripts"]
}
